{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: gcc build all files",
            "command": "/usr/bin/gcc",
            "args": [
				"-Wall",
				"-Werror",
				"-Wextra",
                "-fdiagnostics-color=always",
                "-g3",
                "-I${workspaceFolder}/includes",
                "${workspaceFolder}/*.c",
                "-L${workspaceFolder}/libft",
                "-lftprintf",
				"-fsanitize=address",
                "-o",
                "${workspaceFolder}/push_swap"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "gcc compiler"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}